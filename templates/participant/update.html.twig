{% extends 'document.html.twig' %}

{% block title %}Sortir - Gestion de profil{% endblock %}

{% block body %}
<style>
    .flash{
        padding: 20px;
        display: block;
        font-weight: bold;
        color: #fff;
        border-radius: 10px;
        margin-bottom: 10px;
        box-shadow: 5px 5px 5px 5px rgba(0,255,0,0.5);
    }
</style>

<div class="container">
    <h1>Mon profil</h1>

    <div>
        {{ form_start(gestionForm) }}
        {{ form_widget(gestionForm) }}
        <a href="{{ path('sorties_0') }}" class="btn btn-danger">Annuler</a>
        {{ form_end(gestionForm) }}
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

</div>
{% endblock %}
