{% if styles is not defined or styles is null %}
    {% set styles = [{"href":'assets/style/main.css'},{"href":'assets/style/fontawesome.all.css'}] %}
{% else %}
    {% set styles = styles|merge({"href":'assets/style/main.css'}) %}
    {% set styles = styles|merge({"href":'assets/style/fontawesome.all.css'}) %}
{% endif %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Sortir{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    {% if styles is defined and styles is not null %}
        {% for style in styles %}
            <link rel="stylesheet" href="{{ asset(style.href) }}">
        {% endfor %}
    {% endif %}
    {% if scripts is defined and scripts is not null %}
        {% for script in scripts %}
            <script src="{{ script.src }}" type="{{ asset(script.type) }}"></script>
        {% endfor %}
    {% endif %}
</head>
<body class="theme-{{ theme|default('pink') }}">
{% block header %}
    {% embed 'components/header.html.twig' %}

    {% endembed %}
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    {% embed 'components/footer.html.twig' %}

    {% endembed %}
{% endblock %}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>